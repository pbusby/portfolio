<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <title>Paul Busby | Marketer & Dev</title> -->
    <title><%= DEFAULT_META["meta_title"] %></title>
    <meta name="description" content="<%= DEFAULT_META["meta_description"] %>">

    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="<%= DEFAULT_META["meta_title"] %>" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="<%= request.original_url %>" />
    <meta property="og:image" content="<%= image_path 'cover.png'%>" />
    <meta property="og:description" content="<%= DEFAULT_META["meta_description"] %>" />
    <meta property="og:site_name" content="<%= DEFAULT_META["meta_title"] %>" />

    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->
    <%= favicon_link_tag %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <%= yield %>
    <%= render 'shared/footer' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
